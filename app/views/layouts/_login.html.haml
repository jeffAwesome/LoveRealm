%li.login-user.clearfix
  %span.user-icon
    %a.btn.btn-default{"data-content" => "Hello", "data-toggle" => "popover", :href => "#", :title => "Popover title"} Large popover
    = image_tag "login.png"
  - if user_signed_in?
    = link_to current_user.email, edit_user_registration_path
  - else
    = link_to "Join", new_user_registration_path
    |
    = link_to "Login", new_user_session_path