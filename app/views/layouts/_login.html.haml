%li.login-user.clearfix
/ %a.btn.btn-default{"data-content" => "Hello", "data-toggle" => "popover", :href => "#", :title => "Popover title"} Large popover
	%span.user-icon
	= image_tag "login.png"
	- if user_signed_in?
		= current_user.email
		=link_to "Logout", destroy_user_session_path, method: :delete
	- else
		= link_to "Login", new_user_session_path
		|
		=link_to "Join", new_user_registration_path