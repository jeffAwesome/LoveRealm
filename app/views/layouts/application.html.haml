            %input.search{name: "", placeholder: "Seek and you shall find!  (Mathew 7:7)", type: "text", value: ""}/
            %input.magnifier{name: "", placeholder: "", type: "submit", value: ""}/


        .pull-right
          %ul.login
            %li.login-user.clearfix
              %span.user-icon
                %img{src: "assets/login.png"}
              %a{href: "#"}> Login
            %li.join
              %a{href: "#"} Join

